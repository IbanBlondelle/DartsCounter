@model DartsCounter.Ui.Mvc.Models.DartsModel

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background: linear-gradient(to bottom right, #ff3333, #ff751a);
            margin: 0;
            padding: 0;
        }

        .title {
            text-align: left;
            font-size: 40px;
            margin-top: 20px;
        }

        .span {
            text-align: left;
            font-size: 80px;
            margin-top: 20px;
        }

        .button {
            margin-top: 30px;
        }

        .form-control {
            width: 100px;
            height: 40px;
        }

    </style>
</head>
<body>
    <h1 class="title">Game On!</h1>

    <span class="span">@Model.Score</span>
    <form asp-action="Subtraction" asp-controller="Home" method="post">
        <div class="mb-3">
            <label class="form-label">Score:</label>
            <input type="number" class="form-control" name="Points">
        </div>
        <button type="submit" class="button">Submit score</button>
    </form>

    <form asp-action="ResetGame" asp-controller="Home" method="post">
		<button type="submit" class="button">New Game</button>
    </form>

    <form asp-action="Returnhome" asp-controller="Home" method="post">
        <button type="submit" class="button">Return to homepage</button>
    </form>
	
</body>
</html>
